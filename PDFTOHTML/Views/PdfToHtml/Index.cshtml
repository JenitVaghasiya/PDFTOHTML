
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PDF TO HTML</h2>

@using (Html.BeginForm("Index",
                        "PdfToHtml",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{
    <div class="row">
        @if (ViewBag.generatedfile != null)
        {
            <div class="col-md-12">
                <span class="text-success">@ViewBag.Message Click here <a target="_blank" href="/PdfToHtml/EditHtmlData?filename=@ViewBag.generatedfile">@ViewBag.generatedfile</a></span>
            </div>
        }
        else
        {
            <div class="col-md-12">
                <span class="text-danger"> @ViewBag.Message</span>
            </div>
        }
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="file" id="file" />
            </div>
        </div>
        <div class="col-md-6">
            <input type="submit" class="btn btn-primary" value="Upload" />
        </div>
    </div>
}
 